import turtle

wn = turtle.Screen()
wn.bgcolor("purple")
wn.title("Turtle")
skk = turtle.Turtle()

for i in range(30):
  skk.forward(60)
  skk.right(244)

turtle.done()





import turtle

wn = turtle.Screen()
wn.bgcolor("purple")
wn.title("Turtle")
skk = turtle.Turtle()

num_sides = 3
side_length = 70
angle = 360.0 / num_sides 

for i in range(num_sides):
  skk.forward(side_length)
  skk.left(angle)


turtle.done()






import turtle

wn = turtle.Screen()
wn.bgcolor("purple")
wn.title("Turtle")
skk = turtle.Turtle()

num_sides = 8
side_length = 70
angle = 360.0 / num_sides 

for i in range(num_sides):
  skk.forward(side_length)
  skk.left(angle)


turtle.done()





